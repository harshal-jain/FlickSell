
@model Flick_Sell.Models.Adviewmodel

@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<div class="row">
    <div class="col-lg-12 col-md-12">

        <img src="~/Content/img/Sale.gif" class="img img-responsive" style="width:100%; height:150px;" />
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">

        
    </div>

    <div class="col-lg-6 col-md-6" style="padding-top:50px">

        <div>
            <h4>PRICE : @Model.pro_price</h4>

        </div>
        <div>
            <h4>DESCRIPTION : @Model.pro_des</h4>
            <h4>  </h4>
        </div>

        

        <div>
            <h4>Category : @Model.cat_name </h4>

        </div>

        <div>
            <h4>Posted by : @Model.u_name <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /></h4>

        </div>

        <div>
            <h4>Contact Number : @Model.u_contact</h4>

        </div>
        <div>
            @if(Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
            {
                
                @Html.ActionLink("Close Ad", "DeleteAd", new {@class = "btn btn-danger", id= @Model.prod_id })
                    @*<input type="submit" value="Close Ad" class="btn btn-danger" />*@    
                
                
                
            }
        </div>


    </div>

    <div class="col-lg-2 col-md-2" style="padding-top:40px;" >
        

        <img src="@Url.Content(@Model.prod_image)" style="width:400px; height:300px" />
        <div style="text-align:center">
            <h1>@Model.prod_name </h1>
        </div>
        
    </div>
    


</div>